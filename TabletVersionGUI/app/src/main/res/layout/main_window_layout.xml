<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="top">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="910dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/patientButton"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:background="#FF5722"
                    android:backgroundTint="#0D47A1"
                    android:onClick="showPatientsDialog"
                    android:text="Patient"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/probeButton"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#0D47A1"
                    android:onClick="showProbeDialog"
                    android:text="Probe"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/measureButton"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="#0D47A1"
                    android:onClick="showMeasurementDialog"
                    android:text="Measure"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/presetsButton"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="#0D47A1"
                    android:onClick="showPresetsDialog"
                    android:text="Preset"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/saveLoadButton"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="#0D47A1"
                    android:onClick="showSaveLoadDialog"
                    android:text="Save\nLoad"
                    android:textSize="13sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:backgroundTint="@color/black"
                    android:text="Image\nPosition"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/imagePositionCenterInMainWindowButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/darker_gray"
                    android:onClick="imagePositionCenter"
                    android:text="CENTER" />

                <Button
                    android:id="@+id/imagePositionHomeInMainWindowButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/darker_gray"
                    android:onClick="imagePositionHome"
                    android:text="HOME" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <ImageView
                    android:id="@+id/controlImageView"
                    android:layout_width="240dp"
                    android:layout_height="390dp"
                    android:layout_weight="1"
                    android:accessibilityHeading="false"
                    android:adjustViewBounds="false"
                    android:backgroundTint="@android:color/transparent"
                    android:forceDarkAllowed="true"
                    android:foregroundTint="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    app:srcCompat="@drawable/image_control"
                    tools:srcCompat="@drawable/image_control"
                    tools:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="92dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="257dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imagingFrameInMainWindowImageView"
                android:layout_width="516dp"
                android:layout_height="516dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/splash" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MAUI"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  IMAGING"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/currentTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoText="false"
                android:background="@color/black"
                android:text="10:11:23"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/cleanScreenButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:text="Clean Screen" />

            <Button
                android:id="@+id/logInButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:onClick="showLogInLogOutDialog"
                android:text="Log In" />

            <Button
                android:id="@+id/SystemMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:onClick="showSystemPopupMenu"
                android:text="System" />

            <Button
                android:id="@+id/systemStatusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_green_light"
                android:onClick="showSystemStatusDialog"
                android:text="Status" />

            <ImageView
                android:id="@+id/powerImageView"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/power" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/unitLabelInMainWindowTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_green_light" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/verticalMeasurementNumberLabelsTextView"
                        android:layout_width="20dp"
                        android:layout_height="512dp" />

                    <ImageView
                        android:id="@+id/verticalRulerImageView"
                        android:layout_width="20dp"
                        android:layout_height="512dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/horizontalUnitMeasurementNumberLabelsTextView"
                    android:layout_width="512dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/horizontalRulerImageView"
                    android:layout_width="512dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />

                <ImageView
                    android:id="@+id/mainImageView"
                    android:layout_width="512dp"
                    android:layout_height="512dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <SeekBar
                    android:id="@+id/cineLoopSeekBar"
                    android:layout_width="512dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:max="10"
                    android:progress="7"
                    android:progressDrawable="@layout/progress_seekbar"
                    android:secondaryProgress="2"
                    android:thumb="@drawable/thumb"
                    android:thumbTintMode="add"
                    android:tickMarkTintMode="src_over" />

                <ProgressBar
                    android:id="@+id/cineLoopProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="512dp"
                    android:layout_height="20dp"
                    android:progress="75"
                    android:progressBackgroundTint="#F3DD2A"
                    android:progressTint="#ECD409" />

                <TextView
                    android:id="@+id/cineProgressTextView"
                    android:layout_width="300dp"
                    android:layout_height="10dp"
                    android:layout_below="@+id/cineLoopSeekBar"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="29dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <Space
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TGC"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/darker_gray"
                        android:text="CENTER"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/tgc1InMainWindowSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:progressBackgroundTint="@color/white" />

                <SeekBar
                    android:id="@+id/tgc2InMainWindowSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:progressBackgroundTint="@color/white" />

                <SeekBar
                    android:id="@+id/tgc3InMainWindowSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:progressBackgroundTint="@color/white" />

                <SeekBar
                    android:id="@+id/tgc4InMainWindowSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:progressBackgroundTint="@color/white" />

                <SeekBar
                    android:id="@+id/tgc5InMainWindowSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:progressBackgroundTint="@color/white" />

                <SeekBar
                    android:id="@+id/tgc6InMainWindowSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:progressBackgroundTint="@color/white" />

                <SeekBar
                    android:id="@+id/tgc7InMainWindowSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:progressBackgroundTint="@color/white" />

                <SeekBar
                    android:id="@+id/tgc8InMainWindowSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:progressBackgroundTint="@color/white" />

                <SeekBar
                    android:id="@+id/tgc9InMainWindowSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:progressBackgroundTint="@color/white" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DLC"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/darker_gray"
                        android:text="CENTER"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/dlcInMainWindowSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:progressBackgroundTint="@color/white" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/livePlaybackInMainWindowButton"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/white"
                        android:onClick="onLivePlayback"
                        android:text="Live"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="760dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="560dp" />

            <TextView
                android:id="@+id/cinePlusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="           CINEplus"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/stepBackwardInMainWindowImageButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:onClick="onStepBackward"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/double_left_arrow" />

                <ImageButton
                    android:id="@+id/playPauseInMainWindowImageButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:onClick="onPlayPause"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/right_arrow" />

                <ImageButton
                    android:id="@+id/stepForwardInMainWindowImageButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:onClick="onStepForward"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/right_double_arrow" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/runFreezeInMainWindowButton"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:onClick="onRunFreeze"
                    android:text="FREEZE"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dialogPositioningRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="top"></RelativeLayout>

</FrameLayout>
