<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="192dp"
    android:layout_height="602dp"
    android:background="@color/white"
    android:requiresFadingEdge="horizontal|vertical">
    android:background="@drawable/state_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="1dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/measurementTopLevelLinearLayout"
                android:layout_width="190dp"
                android:layout_height="600dp"
                android:background="@color/black"
                android:backgroundTint="@color/black"
                android:layerType="software"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Space
                            android:layout_width="3dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/startMeasurementButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:text="START" />

                        <Space
                            android:layout_width="1dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/stopMeasurementButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:text="STOP" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Space
                            android:layout_width="3dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/cancelMeasurementButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:text="CANCEL" />

                        <Space
                            android:layout_width="1dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/swapMeasurementButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:text="SWAP" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Space
                            android:layout_width="3dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/markMeasurementButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:text="MARK"
                            android:visibility="invisible" />

                        <Space
                            android:layout_width="1dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/nextMeasurementButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:text="NEXT"
                            android:visibility="invisible" />
                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="3dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ListView
                            android:id="@+id/measurementsListView"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="@color/white"
                            android:backgroundTint="@color/white"
                            android:choiceMode="singleChoice"
                            android:clickable="true" />

                        <Spinner
                            android:id="@+id/measurementsSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:backgroundTint="@color/white" />

                    </LinearLayout>
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Space
                            android:layout_width="3dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/editMeasurementButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/design_default_color_secondary"
                            android:text="EDIT" />

                        <Space
                            android:layout_width="1dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/deleteMeasurementButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/design_default_color_secondary"
                            android:text="DELETE" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Space
                            android:layout_width="3dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/clearMeasurementButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/design_default_color_secondary"
                            android:text="CLEAR" />
                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="50dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/exitMeasurementButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:text="EXIT" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>