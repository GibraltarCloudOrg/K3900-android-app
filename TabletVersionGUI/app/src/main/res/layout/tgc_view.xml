<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7ss2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/image_control" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tgcSlidersLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="1200dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView57222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onTgcCenter"
                android:text="TGC"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tgcCenterActionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onTgcCenter"
                android:text="Center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onDlcCenter"
                android:text="DLC"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/dlcCenterActionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onDlcCenter"
                android:text="Center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <SeekBar
                android:id="@+id/dlcSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/white" />


            <Button
                android:id="@+id/exitTgcDialogButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="Exit" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>